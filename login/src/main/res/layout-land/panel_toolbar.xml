    <!--android:layout_toRightOf="@+id/iv_error_cmd_main"-->
    <!--android:textColor="@color/error_exception"-->
    <!--android:textSize="@dimen/x32" />-->

    <ProgressBar
        android:id="@+id/prg_loadcmdrate_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_ipaddress_main"
        android:layout_below="@+id/ll_cmd_collect"
        android:layout_marginRight="@dimen/prg_margin_right_land_main"
        android:layout_marginTop="@dimen/prg_margin_top_land_main"
        android:indeterminateOnly="false"
        android:max="100"
        android:minHeight="@dimen/prg_min_height_land_main"
        android:mirrorForRtl="true"
        android:progress="0"
        android:progressDrawable="@drawable/progress_cmd" />
    <!-- 指令集,loading加载-->
    <com.nd.android.adhoc.login.ui.widget.CircleImageView
        android:id="@+id/iv_userheader_main"
        android:layout_width="@dimen/icon_user_header_middle_width_land_main"
        android:layout_height="@dimen/icon_user_header_middle_height_land_main"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_setting_main"
        android:layout_marginRight="@dimen/icon_user_header_middle_right_land_main"
        android:layout_marginTop="@dimen/icon_user_header_middle_top_land_main"
        android:src="@drawable/icon_userheader_toolbar" />
    <!-- 用户昵称-->
    <TextView
        android:id="@+id/tv_usernickname_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_setting_main"
        android:layout_marginRight="@dimen/icon_user_nickname_margin_right_land_main"
        android:layout_marginTop="@dimen/icon_user_nickname_margin_top_land_main"
        android:layout_toLeftOf="@+id/iv_userheader_main"
        android:includeFontPadding="false"
        android:text="@string/main_str_usernickname"
        android:textColor="@color/large_size_color_shader"
        android:textSize="@dimen/icon_user_nickname_font_size_land_main" />
</RelativeLayout>